<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberSQL">
   
   
   
   <!--로그인-->
   <select id="memberLogin" parameterType="java.util.Map" resultType="member">
      SELECT * FROM member where id=#{id} and pwd=#{pwd}
   </select>
      
   <insert id="memberWrite" parameterType="member" >
      insert into member values(#{name}, 
                          #{id}, 
                          #{pwd}, 
                          #{gender}, 
                          #{email1}, 
                          #{email2}, 
                          #{tel1}, 
                          #{tel2}, 
                          #{tel3}, 
                          #{zipcode}, 
                          #{addr1}, 
                          #{addr2}, 
                          sysdate)
   </insert> 
   
   <!--중복 아이디 체크-->
   <select id="isExistId" parameterType="String" resultType="member">
      select * from member where id=#{id}
   </select>
   
   <!-- 1사람의 데이터 가져오기 -->
   <select id="getMember" parameterType="String" resultType="member">
      select * from member where id=#{id}
   </select>
   
   <!-- 회원정보수정 -->
   <update id="memberUpdate" parameterType="member">
      update member set name=#{name}
                   , pwd=#{pwd}
                  , gender=#{gender}
                  , email1=#{email1}
                  , email2=#{email2}
                  , tel1=#{tel1}
                  , tel2=#{tel2}
                  , tel3=#{tel3}
                  , zipcode=#{zipcode}
                  , addr1=#{addr1}
                  , addr2=#{addr2}
                   , logtime=sysdate
                   where id=#{id}
   </update>
   
   <!--비밀번호가 맞는지 확인-->
   <select id="isExistPwd" parameterType="java.util.Map" resultType="member">
      select * from member where id=#{id} and pwd=#{pwd}
   </select>
   
   <!--아이디 삭제-->
   <delete id="memberDelete" parameterType="String">
      delete member where id=#{id}
   </delete>
   
   
   
</mapper>