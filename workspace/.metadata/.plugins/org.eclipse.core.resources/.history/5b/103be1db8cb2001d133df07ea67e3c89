<script type="text/javascript"> 

		function check(){
			document.getElementById("nameDiv").innerText = "";
			document.getElementById("genderDiv").innerText = "";
			document.getElementById("colorDiv").innerText = "";
			document.getElementById("hobbyDiv").innerText = "";
			document.getElementById("genderDiv").innerText = "";
			document.getElementById("subjectDiv").innerText = "";
			
			if(document.paramForm.name.value=="") document.getElementById("nameDiv").innerText = "이름 입력 ";
			else if(document.paramForm.gender.value=="") document.getElementById("genderDiv").innerText = "성별 선택  ";
			else if(document.paramForm.color.value=="") document.getElementById("colorDiv").innerText = "색깔 선택  ";
			else if(document.paramForm.hobby.value=="") document.getElementById("hobbyDiv").innerText = "성별 선택  ";
			else if(document.paramForm.gender.value=="") document.getElementById("genderDiv").innerText = "취미 선택  ";
			else if(document.paramForm.subject.value=="") document.getElementById("subjectDiv").innerText = "과목 선택  ";
			else document.paramForm.submit();
		}
			
</script>
			
			
		}

